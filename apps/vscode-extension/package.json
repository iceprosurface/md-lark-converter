{
  "name": "md-lark-converter",
  "version": "1.0.0",
  "private": true,
  "description": "Markdown to Lark (飞书) converter - VSCode extension",
  "publisher": "iceprosurface",
  "displayName": "Markdown to Lark Converter",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md-lark.copyToLark",
        "title": "复制到 Lark",
        "category": "Markdown to Lark"
      },
      {
        "command": "md-lark.pasteFromLark",
        "title": "从 Lark 粘贴",
        "category": "Markdown to Lark"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "md-lark.copyToLark",
          "when": "editorLangId == markdown",
          "group": "9_cutcopypaste"
        },
        {
          "command": "md-lark.pasteFromLark",
          "when": "editorLangId == markdown",
          "group": "9_cutcopypaste"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js --production",
    "package": "pnpm build && vsce package --no-dependencies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iceprosurface/md-lark-converter.git",
    "directory": "apps/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/iceprosurface/md-lark-converter/issues"
  },
  "homepage": "https://github.com/iceprosurface/md-lark-converter#readme",
  "author": "icepro",
  "license": "MIT",
  "dependencies": {
    "@md-lark-converter/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  }
}
